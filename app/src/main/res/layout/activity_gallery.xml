<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GalleryActivity" >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:scrollbarTrackVertical="@android:color/white"
        android:scrollbarSize="@dimen/scrollbarSize"
        tools:listitem="@layout/item_image" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="@dimen/main_progressBar_size"
        android:layout_height="@dimen/main_progressBar_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/main_progressBar_marginTop" />

</FrameLayout>